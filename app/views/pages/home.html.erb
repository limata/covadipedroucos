<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>


<div class = "item-booking">
  <table class = "table price">
   <tr>
      <td id="gadgetprice"><%=@house.price%> €</td>
      <td class ="text-right"> per day</td>
    </tr>
    <tr>
      <%= simple_form_for [@house, @booking] do |f| %>
      <td><%= f.input :start_date, as: :string, input_html: {class: "form-control datetimepicker", id:"start_date"}%></td>
      <td><%= f.input :end_date, as: :string, input_html: {class: "form-control datetimepicker", id:"end_date"}%></td>
    </tr>
    <tr>
      <td>total price</td>
      <td class ="text-right" id="price"><%=@house.price%>€</td>
    </tr>
  </table>
  <%= f.submit "book now!", class: "btn btn-primary btn-large btn-block" %>
  <% end %>
  <p class="text-center"> No payement here, only a booking request will be sent to the owner </p>
</div>

